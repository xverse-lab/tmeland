{
  "compilerOptions": {
    "module": "esNext",
    "target": "es5",
    "lib": ["es2015", "DOM"],
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
